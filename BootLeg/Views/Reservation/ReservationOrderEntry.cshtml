@model BootLeg.Models.ReservationOrderEntryModel
@{
    ViewBag.Title = "ReservationOrderEntry";
    Layout = null;
}

<h2>ReservationOrderEntry</h2>
@using (Html.BeginForm())
{
    <table>
        <tr hidden="hidden">
            <td>@Html.LabelFor(x => x.Id)</td>
            <td>@Html.TextBoxFor(x => x.Id)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.ReservationId)</td>
            <td>@Html.DropDownListFor(x => x.ReservationId, Model.ReservationList, "Please select")</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.OrderId)</td>
            <td>@Html.DropDownListFor(x => x.OrderId, Model.OrderList, "Please select")</td>
        </tr>

    </table>
}

