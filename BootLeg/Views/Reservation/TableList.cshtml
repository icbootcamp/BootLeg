@model List<BootLeg.Models.DinningTableModel>
@{
    ViewBag.Title = "TableList";
}
<head></head>
<body>
    <h2>Table List View</h2>
    <button class="add-table-button btn btn-success">Add New Table</button>
    <table class="">
        <tr>
            <td>Table ID</td>
            <td>Table Name</td>
            <td>No. of Seats</td>
            <td>Description</td>
            <td>Operation</td>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td id="dataid">@x.Id</td>
                <td id="dataname">@x.TableName</td>
                <td id="dataseat">@x.Seats</td>
                <td id="datadesc">@x.Description</td>
                <td>
                    <button class="edit-table-button btn btn-warning">Update</button>
                    <button class="remove-table-button btn btn-danger">Remove</button>
                </td>

            </tr>
        }

    </table>

</body>

